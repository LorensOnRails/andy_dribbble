
<%= simple_form_for(@shot) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="columns is-centered">
    <div class="column is-6">

      <%# unless @shot.user_shot.blank? %>
        <%#= image_tag (@shot.user_shot_url), id: "previewImage" %>
      <%# end %>

      <output id="list"></output>
      <div id="drop_zone">Drag your shot here</div>
      <br />

      <%#= f.input :user_shot, label: false, input_html: { class: "file-input", type: "file"}, wrapper: false, label_html: { class: "file-label"} %>

    <div class="field">
      <label class="label">
        <%= f.label :title %>
      </label>
      <div class="control">
        <%= f.text_field :title, class: "input", placeholder: "Title" %>
      </div>
    </div>

    <div class="field">
      <label class="label">
        <%= f.label :description %>
      </label>
      <div class="control">
        <%= f.text_area :description, class: "textarea", placeholder: "Description", rows: 10 %>
      </div>
    </div>
  
    <div class="control">
      <%= f.submit "Submit", class: "button is-primary" %>
    </div>
    <%= link_to 'Back', shots_path %>
  </div>

<% end %>
