<%= simple_form_for([@shot, @shot.comments.build]) do |f| %>
  <div class="field">
    <div class="control">
      <%= f.text_area :response, class: "textarea", placeholder: "Compose a new comment ...", rows: 5 %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "create comment", class: "button is-primary" %>
  </div>
<% end %>
